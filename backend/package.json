{
  "name": "delivery-api",
  "version": "1.0.0",
  "description": "API of delivery app",
  "main": "index.js",
  "engines": {
    "npm": ">=10.0.0 <11.0.0",
    "node": ">=18.0.0 <19.0.0"
  },
  "scripts": {
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "start": "npx dotenv -e .env.local -- ts-node src/server.ts",
    "set-db": " npx prisma migrate deploy && npx prisma db seed",
    "test": "npx dotenv -e .env.test -- jest",
    "test:unit": "npx dotenv -e .env.test -- jest unit --setupFilesAfterEnv '<rootDir>/mocks/prismaMock.ts'",
    "test:integration": "npx dotenv -e .env.test -- ./scripts/run-integration-tests.sh",
    "build": "rimraf dist && tsc",
    "ts-check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "postinstall": "prisma generate"
  },
  "author": "Ca√≠que Quaresma Silva",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "express": "^4.18.3",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^4.6.3",
    "morgan": "^1.10.0",
    "prisma": "^5.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "clearMocks": true
  },
  "prisma": {
    "schema": "src/infra/database/prisma/schema.prisma",
    "seed": "ts-node --transpile-only src/infra/database/prisma/seed.ts"
  }
}
